<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_picture"
        android:paddingLeft="@dimen/message_item_list_vertical"
        android:paddingTop="@dimen/message_item_list_vertical"
        android:paddingRight="@dimen/message_item_list_vertical"
        android:paddingBottom="@dimen/message_item_list_vertical"/>

    <TextView
        android:id="@+id/sender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_icon"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true"/>


</RelativeLayout>